<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/default_margin_double_double">

    <TextView
        android:layout_marginTop="32dp"
        style="@style/TextAppearance.MaterialComponents.Headline4"
        android:id="@+id/textOnboardingTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/imageOnboardingImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Widzisz dzika w okolicy?" />

    <ImageView
        android:id="@+id/imageOnboardingImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/onboarding_three"
        app:layout_constraintTop_toBottomOf="@id/textOnboardingTitle"
        app:layout_constraintBottom_toTopOf="@+id/textOnboardingSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        style="@style/TextAppearance.MaterialComponents.Body1"
        android:id="@+id/textOnboardingSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/imageOnboardingImage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Czy po Twojej okolicy nocą hasa za dużo dzików?" />

</androidx.constraintlayout.widget.ConstraintLayout>
